<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping >
    
    <class name="com.ub.edu.bda.Model.Recepta"  table="recepta">                        
        <id name="id_Recepta" type="int" column="id_Recepta">
            <generator class="identity" />
        </id>
        <property name="nom" type="string" column="nom" />
        <property name="temps" type="string" column="temps" />
        <property name="dificultat" type="string" column="dificultat" />
        <property name="elaboracio" type="string" column="elaboracio" />        
        
       
        
    </class>
</hibernate-mapping>
