<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.ub.edu.bda.Model">
    <class name="xef" table="xef">
    <id column="ID" type = "int" name="id_Xef">
      <generator class="identity"/>
    </id>
    <property column="NOM" type="string" name="nom"/>
    <property column="ESTRELLES" type="int" name="int_Estrelles"/>
        
    <set name="receptes" table="recepta" lazy="true" cascade="all">
           <key>
               <column name="id_Xef" /> 
           </key>
            <one-to-many class="Recepta" /> 
    </set>
    </class>
</hibernate-mapping>