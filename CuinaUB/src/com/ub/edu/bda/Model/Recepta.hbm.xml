<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package = "com.ub.edu.bda.Model">
    <class name="com.ub.edu.bda.Model.Recepta" table="recepta">
        <id name="ID" column="id_Recepta">
            <generator class="identity" />
        </id>
        <property name="ELABORACIO" column="elaboracio" />
        <property name="TEMPS" column="temps" />
        <property name="NOM" column="nom" />
        <property name="DIFICULTAT" column="dificultat" />
        
        <many-to-one name = "ID" class = "com.ub.edu.bda.Model.Xef"
                     column = "ID" cascade = "all" not-null ="true"/>

    </class>
</hibernate-mapping>