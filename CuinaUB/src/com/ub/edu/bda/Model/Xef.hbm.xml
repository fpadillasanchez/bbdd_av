<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package = "com.ub.edu.bda.Model">
    
    <class name="Xef" table="XEF">
        
        <id name="id_Xef" column="IDXEF" >
            <generator class="native"/>
        </id>
        
        <property column="NOM" name="nom"/>
        <property column="ESTRELLES" name="int_Estrelles"/>
    
        
        <set name="receptes" inverse="true" cascade ="all" >
            <key column="IDXEF"/>
            <one-to-many class ="Recepta"/>
        </set>
    </class>
</hibernate-mapping>