<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package = "com.ub.edu.bda.Model">
    
    <class name="Plat" table="PLAT">
        
        <id name="id_Plat" column="IDPLAT" >
            <generator class="native"/>
        </id>
        
        <property column="NOM" name="nom"/>
        <property column="DESCRIPCIO" name="descripcio"/>

        <many-to-one name="recepta" class="Recepta"
                     column="IDRECEPTA" not-null="false"/>
        
         
    </class>
</hibernate-mapping>
