<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package = "com.ub.edu.bda.Model">
    
    <class name="Ingredient" table="INGREDIENT">
        
        <id name="id_Ingredient" column="IDINGREDIENT" >
            <generator class="identity"/>
        </id>
        
        <property column="NOM" name="nom"/> 
        <property column="FAMILIA" name="familia"/> 
        <property column="REFRIGERACIO" name="refrigeracio"/> 
        
        <set name="receptes" table= "ReceptaIngredient" inverse="true" cascade ="all" >
            <key column="IDINGREDIENT"/>
            <many-to-many class ="Recepta"/>
        </set>

    </class>
</hibernate-mapping>